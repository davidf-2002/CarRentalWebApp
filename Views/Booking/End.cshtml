@model CarRentalWebApp.Models.BookingViewModel

@{
    ViewData["Title"] = "End Booking";
}

<h1>End Booking</h1>

<form asp-action="EndConfirmed" method="post">
    <input type="hidden" asp-for="Booking.BookingId" />
    <input type="hidden" asp-for="Booking.CollectionVehicleBranchID" />

    <div class="form-group">
        <label asp-for="Booking.CustomerName" class="control-label">Customer Name</label>
        <input asp-for="Booking.CustomerName" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Booking.StartTime" class="control-label">Start Time</label>
        <input asp-for="Booking.StartTime" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Booking.EndTime" class="control-label">End Time</label>
        <input asp-for="Booking.EndTime" class="form-control" />
        <span asp-validation-for="Booking.EndTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SelectedBranchId" class="control-label">Drop-off Branch</label>
        <select asp-for="SelectedBranchId" class="form-control" asp-items="Model.Branches">
            <option value="">-- Select a Branch --</option>
        </select>
        <span asp-validation-for="SelectedBranchId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="End Booking" class="btn btn-primary" />
    </div>
</form>