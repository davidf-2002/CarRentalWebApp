@model CarRentalWebApp.Models.Booking

@{
    ViewData["Title"] = "Create";
}

<h1>Create Booking</h1>

<form asp-action="Create" method="post">

    <div class="form-group">
        <label asp-for="CustomerName" class="control-label">Customer Name</label>
        <input asp-for="CustomerName" class="form-control" />
        <span asp-validation-for="CustomerName" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="CollectionVehicleBranchID" class="control-label">Collection Branch</label>
        <select asp-for="CollectionVehicleBranchID" class="form-control" id="branchDropdown">
            <option value="">Select Branch</option>
            @foreach (var branch in ViewBag.Branches)
            {
                <option value="@branch.BranchId">@branch.Name</option>
            }
        </select>
    </div>
    
    <div class="form-group">
        <label asp-for="VehicleId" class="control-label">Vehicle</label>
        <select asp-for="VehicleId" class="form-control" id="vehicleDropdown">
            <option value="">Select Vehicle</option>
        </select>
    </div>
    
    <script>
    document.getElementById('branchDropdown').addEventListener('change', function () {
        var branchId = this.value;
        fetch(`/Booking/GetVehiclesByBranch?branchId=${branchId}`)
            .then(response => response.json())
            .then(data => {
                var vehicleDropdown = document.getElementById('vehicleDropdown');
                vehicleDropdown.innerHTML = '';  // Clear existing options
                data.forEach(vehicle => {
                    var option = new Option(vehicle.model, vehicle.vehicleId);
                    vehicleDropdown.add(option);
                });
            });
    });
    </script>

    <div class="form-group">
        <label asp-for="StartTime" class="control-label">Start Date</label>
        <input asp-for="StartTime" class="form-control" />
        <span asp-validation-for="StartTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EndTime" class="control-label">End Date</label>
        <input asp-for="EndTime" class="form-control" />
        <span asp-validation-for="EndTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}