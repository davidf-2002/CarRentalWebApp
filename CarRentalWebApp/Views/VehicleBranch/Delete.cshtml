@model CarRentalWebApp.Models.VehicleBranch

@{
    ViewData["Title"] = "Delete Vehicle Branch";
}

<h1>Delete Vehicle Branch</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Vehicle Branch</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Vehicle Branch ID
        </dt>
        <dd class="col-sm-10">
            @Model.VehicleBranchId
        </dd>
        <dt class="col-sm-2">
            Vehicle ID
        </dt>
        <dd class="col-sm-10">
            @Model.VehicleId
        </dd>
        <dt class="col-sm-2">
            Branch ID
        </dt>
        <dd class="col-sm-10">
            @Model.BranchId
        </dd>
        <dt class="col-sm-2">
            Rate
        </dt>
        <dd class="col-sm-10">
            @Model.Rate
        </dd>
    </dl>
    
    <form asp-action="DeleteConfirmed" asp-route-id="@Model.VehicleBranchId" method="post">
        <input type="hidden" asp-for="VehicleBranchId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>